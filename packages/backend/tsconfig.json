{
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "lib": ["ES2020"],
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "baseUrl": ".",
      "paths": {
        "@/*": ["src/*"],
        "@config/*": ["src/config/*"],
        "@api/*": ["src/api/*"],
        "@admin/*": ["src/admin/*"],
        "@db/*": ["src/db/*"],
        "@services/*": ["src/services/*"],
        "@types/*": ["src/types/*"],
        "@utils/*": ["src/utils/*"]
      }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist", "**/*.test.ts"]
  }
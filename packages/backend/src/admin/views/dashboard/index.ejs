<%- contentFor('body') %>

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-6">
  <!-- Total Users Card -->
  <div class="bg-white p-6 rounded-lg shadow-md">
    <div class="flex items-center justify-between mb-4">
      <h3 class="text-lg font-semibold text-gray-700">Total Users</h3>
      <span class="inline-flex items-center justify-center p-2 rounded-md bg-blue-100 text-blue-600">
        <i class="fas fa-users"></i>
      </span>
    </div>
    <p class="text-3xl font-bold text-gray-800"><%= stats.usersCount %></p>
    <div class="mt-2 text-sm text-gray-500">Regular system users</div>
  </div>

  <!-- Professionals Card -->
  <div class="bg-white p-6 rounded-lg shadow-md">
    <div class="flex items-center justify-between mb-4">
      <h3 class="text-lg font-semibold text-gray-700">Professionals</h3>
      <span class="inline-flex items-center justify-center p-2 rounded-md bg-green-100 text-green-600">
        <i class="fas fa-user-tie"></i>
      </span>
    </div>
    <p class="text-3xl font-bold text-gray-800"><%= stats.professionalsCount.total %></p>
    <div class="mt-2 text-sm text-gray-500">
      <span class="text-amber-500 font-medium"><%= stats.professionalsCount.pending %> pending</span> | 
      <span class="text-green-500 font-medium"><%= stats.professionalsCount.verified %> verified</span>
    </div>
  </div>

  <!-- Items Card -->
  <div class="bg-white p-6 rounded-lg shadow-md">
    <div class="flex items-center justify-between mb-4">
      <h3 class="text-lg font-semibold text-gray-700">Total Items</h3>
      <span class="inline-flex items-center justify-center p-2 rounded-md bg-purple-100 text-purple-600">
        <i class="fas fa-gem"></i>
      </span>
    </div>
    <p class="text-3xl font-bold text-gray-800">
      <%= stats.gemstonesCount + stats.roughStonesCount + stats.jewelryCount %>
    </p>
    <div class="mt-2 text-sm text-gray-500">
      <%= stats.gemstonesCount %> gemstones, <%= stats.roughStonesCount %> rough, <%= stats.jewelryCount %> jewelry
    </div>
  </div>

  <!-- Marketplace Card -->
  <div class="bg-white p-6 rounded-lg shadow-md">
    <div class="flex items-center justify-between mb-4">
      <h3 class="text-lg font-semibold text-gray-700">Marketplace</h3>
      <span class="inline-flex items-center justify-center p-2 rounded-md bg-amber-100 text-amber-600">
        <i class="fas fa-store"></i>
      </span>
    </div>
    <p class="text-3xl font-bold text-gray-800"><%= stats.marketplaceStats.activeListings %></p>
    <div class="mt-2 text-sm text-gray-500">
      <%= stats.marketplaceStats.completedOrders %> orders | $<%= stats.marketplaceStats.salesVolume.toLocaleString() %> sales
    </div>
  </div>
</div>

<!-- System Status Section -->
<div class="grid grid-cols-1 lg:grid-cols-3 gap-6 mb-6">
  <!-- System Health Card -->
  <div class="bg-white p-6 rounded-lg shadow-md">
    <h3 class="text-lg font-semibold text-gray-700 mb-4">System Health</h3>
    
    <div class="space-y-4">
      <!-- Professional Verification -->
      <div>
        <div class="flex justify-between items-center mb-1">
          <span class="text-sm font-medium text-gray-600">Professional Verification</span>
          <span class="text-sm font-medium text-gray-800"><%= stats.professionalsCount.verified %>/<%= stats.professionalsCount.total %></span>
        </div>
        <div class="w-full bg-gray-200 rounded-full h-2">
          <div class="bg-green-500 h-2 rounded-full" style="width: <%= percentages.professionals %>%"></div>
        </div>
      </div>
      
      <!-- System Uptime -->
      <div>
        <div class="flex justify-between items-center mb-1">
          <span class="text-sm font-medium text-gray-600">System Uptime</span>
          <span class="text-sm font-medium text-gray-800">99.9%</span>
        </div>
        <div class="w-full bg-gray-200 rounded-full h-2">
          <div class="bg-blue-500 h-2 rounded-full" style="width: 99.9%"></div>
        </div>
      </div>
      
      <!-- Database Status -->
      <div>
        <div class="flex justify-between items-center mb-1">
          <span class="text-sm font-medium text-gray-600">Database Status</span>
          <span class="text-sm font-medium text-green-600">Healthy</span>
        </div>
        <div class="w-full bg-gray-200 rounded-full h-2">
          <div class="bg-green-500 h-2 rounded-full" style="width: 100%"></div>
        </div>
      </div>
    </div>
    
    <div class="mt-4">
      <a href="/admin/system/status" class="text-sm text-primary-600 hover:text-primary-800 font-medium">
        View system details →
      </a>
    </div>
  </div>

  <!-- Quick Links Card -->
  <div class="bg-white p-6 rounded-lg shadow-md">
    <h3 class="text-lg font-semibold text-gray-700 mb-4">Quick Actions</h3>
    
    <div class="grid grid-cols-2 gap-3">
      <a href="/admin/users/create" class="flex items-center p-3 rounded bg-gray-50 hover:bg-gray-100 transition">
        <i class="fas fa-user-plus text-blue-500 mr-2"></i>
        <span class="text-sm font-medium text-gray-700">Add User</span>
      </a>
      
      <a href="/admin/professionals/pending" class="flex items-center p-3 rounded bg-gray-50 hover:bg-gray-100 transition">
        <i class="fas fa-user-check text-green-500 mr-2"></i>
        <span class="text-sm font-medium text-gray-700">Verify Pro</span>
      </a>
      
      <a href="/admin/reference-data" class="flex items-center p-3 rounded bg-gray-50 hover:bg-gray-100 transition">
        <i class="fas fa-database text-purple-500 mr-2"></i>
        <span class="text-sm font-medium text-gray-700">Reference Data</span>
      </a>
      
      <a href="/admin/system/backup" class="flex items-center p-3 rounded bg-gray-50 hover:bg-gray-100 transition">
        <i class="fas fa-download text-amber-500 mr-2"></i>
        <span class="text-sm font-medium text-gray-700">Backup DB</span>
      </a>
    </div>
    
    <div class="mt-4">
      <a href="/admin/system/audit-log" class="text-sm text-primary-600 hover:text-primary-800 font-medium">
        View audit log →
      </a>
    </div>
  </div>

  <!-- Recent Activity Card -->
  <div class="bg-white p-6 rounded-lg shadow-md">
    <h3 class="text-lg font-semibold text-gray-700 mb-4">Recent Activity</h3>
    
    <div class="space-y-3">
      <% if (stats.recentUsers && stats.recentUsers.length > 0) { %>
        <% stats.recentUsers.slice(0, 3).forEach(user => { %>
          <div class="flex items-start p-3 bg-gray-50 rounded">
            <div class="flex-shrink-0 w-8 h-8 rounded-full bg-blue-100 flex items-center justify-center text-blue-500">
              <i class="fas fa-user-circle"></i>
            </div>
            <div class="ml-3">
              <p class="text-sm font-medium text-gray-700">New user registered: <%= user.name %></p>
              <p class="text-xs text-gray-500"><%= new Date(user.createdAt).toLocaleString() %></p>
            </div>
          </div>
        <% }) %>
      <% } else { %>
        <div class="text-sm text-gray-500 italic">No recent activity to display</div>
      <% } %>
    </div>
    
    <div class="mt-4">
      <a href="/admin/activity" class="text-sm text-primary-600 hover:text-primary-800 font-medium">
        View all activity →
      </a>
    </div>
  </div>
</div>

<!-- Recent Users and Orders Section -->
<div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
  <!-- Recent Users -->
  <div class="bg-white rounded-lg shadow-md">
    <div class="p-6 border-b border-gray-200">
      <h3 class="text-lg font-semibold text-gray-700">Recent Users</h3>
    </div>
    <div class="p-6">
      <% if (stats.recentUsers && stats.recentUsers.length > 0) { %>
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead>
              <tr>
                <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
                <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Email</th>
                <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Role</th>
                <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Joined</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-200">
              <% stats.recentUsers.forEach(user => { %>
                <tr>
                  <td class="px-4 py-3 text-sm font-medium text-gray-900">
                    <a href="/admin/users/<%= user.id %>" class="hover:text-primary-600">
                      <%= user.name %>
                    </a>
                  </td>
                  <td class="px-4 py-3 text-sm text-gray-500"><%= user.email %></td>
                  <td class="px-4 py-3 text-sm text-gray-500">
                    <span class="px-2 py-1 text-xs font-medium rounded-full 
                      <%= user.role === 'admin' ? 'bg-red-100 text-red-800' : 
                         user.role === 'dealer' || user.role === 'cutter' || user.role === 'appraiser' ? 'bg-purple-100 text-purple-800' :
                         'bg-green-100 text-green-800' %>">
                      <%= user.role %>
                    </span>
                  </td>
                  <td class="px-4 py-3 text-sm text-gray-500">
                    <%= new Date(user.createdAt).toLocaleDateString() %>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
        <div class="mt-4">
          <a href="/admin/users" class="text-sm text-primary-600 hover:text-primary-800 font-medium">
            View all users →
          </a>
        </div>
      <% } else { %>
        <div class="text-sm text-gray-500 italic">No users to display</div>
      <% } %>
    </div>
  </div>

  <!-- Recent Orders -->
  <div class="bg-white rounded-lg shadow-md">
    <div class="p-6 border-b border-gray-200">
      <h3 class="text-lg font-semibold text-gray-700">Recent Orders</h3>
    </div>
    <div class="p-6">
      <% if (stats.recentOrders && stats.recentOrders.length > 0) { %>
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead>
              <tr>
                <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Order ID</th>
                <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Customer</th>
                <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Amount</th>
                <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-200">
              <% stats.recentOrders.forEach(order => { %>
                <tr>
                  <td class="px-4 py-3 text-sm font-medium text-gray-900">
                    <a href="/admin/marketplace/orders/<%= order.id %>" class="hover:text-primary-600">
                      #<%= order.id.substring(0, 8) %>
                    </a>
                  </td>
                  <td class="px-4 py-3 text-sm text-gray-500">
                    <a href="/admin/users/<%= order.userId %>" class="hover:text-primary-600">
                      <%= order.userName %>
                    </a>
                  </td>
                  <td class="px-4 py-3 text-sm text-gray-500">$<%= order.total.toFixed(2) %></td>
                  <td class="px-4 py-3 text-sm">
                    <span class="px-2 py-1 text-xs font-medium rounded-full 
                      <%= order.status === 'completed' ? 'bg-green-100 text-green-800' : 
                        order.status === 'pending' ? 'bg-yellow-100 text-yellow-800' : 
                        order.status === 'cancelled' ? 'bg-red-100 text-red-800' : 
                        'bg-blue-100 text-blue-800' %>">
                      <%= order.status %>
                    </span>
                  </td>
                  <td class="px-4 py-3 text-sm text-gray-500">
                    <%= new Date(order.createdAt).toLocaleDateString() %>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
        <div class="mt-4">
          <a href="/admin/marketplace/orders" class="text-sm text-primary-600 hover:text-primary-800 font-medium">
            View all orders →
          </a>
        </div>
      <% } else { %>
        <div class="flex flex-col items-center justify-center py-12">
          <div class="text-gray-400 mb-4">
            <i class="fas fa-shopping-cart text-5xl"></i>
          </div>
          <p class="text-gray-500 mb-1">No orders yet</p>
          <p class="text-sm text-gray-400">Orders will appear here once the marketplace is active</p>
        </div>
      <% } %>
    </div>
  </div>
</div>


<aside class="fixed inset-y-0 left-0 w-64 bg-gray-800 text-white">
  <div class="flex flex-col h-full">
    <!-- Logo -->
    <div class="flex items-center justify-center h-16 bg-gray-900">
      <a href="/admin" class="text-xl font-bold">
        Gemstone System
      </a>
    </div>

    <!-- Navigation -->
    <nav class="flex-1 px-2 py-4 space-y-1">
      <a href="/admin/dashboard" 
         class="flex items-center px-2 py-2 text-sm font-medium rounded-md hover:bg-gray-700
                <%= path === '/admin/dashboard' ? 'bg-gray-900' : '' %>">
        <i class="fas fa-home w-6"></i>
        Dashboard
      </a>

      <a href="/admin/users" 
         class="flex items-center px-2 py-2 text-sm font-medium rounded-md hover:bg-gray-700
                <%= path === '/admin/users' ? 'bg-gray-900' : '' %>">
        <i class="fas fa-users w-6"></i>
        Users
      </a>

      <a href="/admin/professionals" 
         class="flex items-center px-2 py-2 text-sm font-medium rounded-md hover:bg-gray-700
                <%= path === '/admin/professionals' ? 'bg-gray-900' : '' %>">
        <i class="fas fa-user-tie w-6"></i>
        Professionals
      </a>

      <a href="/admin/gemstones" 
         class="flex items-center px-2 py-2 text-sm font-medium rounded-md hover:bg-gray-700
                <%= path === '/admin/gemstones' ? 'bg-gray-900' : '' %>">
        <i class="fas fa-gem w-6"></i>
        Gemstones
      </a>

      <a href="/admin/rough-stones" 
         class="flex items-center px-2 py-2 text-sm font-medium rounded-md hover:bg-gray-700
                <%= path === '/admin/rough-stones' ? 'bg-gray-900' : '' %>">
        <i class="fas fa-cubes w-6"></i>
        Rough Stones
      </a>

      <a href="/admin/jewelry" 
         class="flex items-center px-2 py-2 text-sm font-medium rounded-md hover:bg-gray-700
                <%= path === '/admin/jewelry' ? 'bg-gray-900' : '' %>">
        <i class="fas fa-ring w-6"></i>
        Jewelry
      </a>

      <a href="/admin/marketplace" 
         class="flex items-center px-2 py-2 text-sm font-medium rounded-md hover:bg-gray-700
                <%= path === '/admin/marketplace' ? 'bg-gray-900' : '' %>">
        <i class="fas fa-store w-6"></i>
        Marketplace
      </a>

      <a href="/admin/certificates" 
         class="flex items-center px-2 py-2 text-sm font-medium rounded-md hover:bg-gray-700
                <%= path === '/admin/certificates' ? 'bg-gray-900' : '' %>">
        <i class="fas fa-certificate w-6"></i>
        Certificates
      </a>

      <a href="/admin/reference-data" 
         class="flex items-center px-2 py-2 text-sm font-medium rounded-md hover:bg-gray-700
                <%= path === '/admin/reference-data' ? 'bg-gray-900' : '' %>">
        <i class="fas fa-database w-6"></i>
        Reference Data
      </a>

      <a href="/admin/system" 
         class="flex items-center px-2 py-2 text-sm font-medium rounded-md hover:bg-gray-700
                <%= path === '/admin/system' ? 'bg-gray-900' : '' %>">
        <i class="fas fa-cogs w-6"></i>
        System
      </a>
    </nav>

    <!-- User Info -->
    <div class="p-4 bg-gray-900">
      <% if (typeof user !== 'undefined' && user) { %>
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <i class="fas fa-user-circle text-2xl"></i>
          </div>
          <div class="ml-3">
            <p class="text-sm font-medium"><%= user.name %></p>
            <p class="text-xs text-gray-400"><%= user.email %></p>
          </div>
        </div>
      <% } %>
    </div>
  </div>
</aside>